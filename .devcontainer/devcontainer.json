// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"name": "CSCI5550 MyFS",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"features": {
		"ghcr.io/jungaretti/features/make:1": {},
		"ghcr.io/devcontainers-extra/features/cmake:1": {},
		"ghcr.io/devcontainers-extra/features/ninja-asdf:2": {}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
		"packages": "sudo apt-get update && sudo apt-get -y install libboost-all-dev clangd fuse libfuse-dev pkg-config ccache",
		"bbfs": "tar xvzf fuse-tutorial.tgz",
		"uv": "curl -LsSf https://astral.sh/uv/install.sh | env UV_INSTALL_DIR=\"/usr/bin\" sudo -E sh && uv sync"
	},
	"postStartCommand": {
		"ccache": "echo 'export PATH=\"/usr/lib/ccache:$PATH\"' | tee -a ~/.bashrc"
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"cschlosser.doxdocgen",
				"ms-vscode.cpptools-extension-pack",
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-python.black-formatter",
				"ms-python.python",
				"KylinIdeTeam.cmake-intellisence",
				"tamasfe.even-better-toml"
			]
		}
	},
	"runArgs": [
		"-it",
		"--rm",
		"--privileged",
		"-e",
		"DISPLAY",
		"-v",
		"/tmp/.X11-unix:/tmp/.X11-unix",
		"-v",
		"/lib/modules:/lib/modules"
	],
	"containerEnv": {
		"CMAKE_C_COMPILER_LAUNCHER": "ccache",
		"CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
	}
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}